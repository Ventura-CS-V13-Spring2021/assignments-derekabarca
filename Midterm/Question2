#include <iostream>
#include <fstream>
#include <cstdlib>
#include <ctime>

using namespace std;

int getRdnum(void){
    srand(time(0));
    for (int x = 1; x <= 10; x++){
        cout << 1 + (rand() % 50);
        return x;
    }
}

int isGreater(int n);
void fileWrite (ofstream &, int);

int main() {

    int result;

    ofstream ofs;
    ofs.open("numbers.txt");
    if (ofs.fail()){
        cout << "Error ocurred while trying to opne file. " << endl;
        exit(0);
    }
    while(1){
        getRdnum();
        if (isGreater()){
            fileWrite(ofs, result);
        }

    }

    return 0;
}